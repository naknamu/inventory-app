<!DOCTYPE html>
<html>
  <head>
    <%- include('partials/head'); %>
  </head>
  <body>
    <%- include('partials/nav'); %>

    <h1><%= title %></h1>

    <form action="" method="post">

        <div class="form-group">
            <label for="name">Name: </label>
            <input type="text" name="name" id="name" value="<%= (typeof category === "undefined") ? '' : category.name %>"> 
        </div>

        <div class="form-group">
            <label for="description">Description: </label>
            <textarea name="description" id="description" cols="30" rows="10" style="resize: none"><%= (typeof category === "undefined") ? '' : category.description %></textarea>
        </div>

        <button type="submit">Submit</button>

    </form>

    <% if (typeof errors !== "undefined") { %>
        <h2>Error Messages: </h2>
        <ul>
            <% errors.forEach(error => { %>
              <li><%= error.msg %></li>
            <% }) %>
         </ul>
    <% } %>

  </body>
</html>